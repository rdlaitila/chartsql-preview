<div class="accordion" id="accordionPanelsStayOpenExample">
	{{#each data.CurrentDatasourceInfo.Tables}}
	<div class="accordion-item border-start-0 border-end-0 {{#if @first}}border-top-0{{/if}}">
		<h2 class="accordion-header" id="panelsStayOpen-headingTwo{{Name}}">
		<button class="accordion-button py-0 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo{{Name}}" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo{{Name}}">
			<i class="ti ti-table"></i><span class="ms-2">{{Name}}</span>
		</button>
		</h2>
		<div id="panelsStayOpen-collapseTwo{{Name}}" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo{{Name}}">
		<ul class="accordion-body list-group list-group-flush p-0">
				{{#each Fields}}
					<li class="list-group-item py-1 ps-5">
						{{!-- <i class="ti ti-table-column"></i>&nbsp; --}}
						<span class="text-azure">{{Name}}</span> <small class="text-muted">[{{Type}}]</small>
					</li>
				{{/each}}

			</ul>
		</div>
	</div>
	{{/each}}
